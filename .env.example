# Configurações do Django
SECRET_KEY=sua_secret_key_aqui
ALLOWED_HOSTS=localhost,127.0.0.1,seu-dominio.com
DEBUG=0  # 0 para produção, 1 para desenvolvimento

# Banco de dados
DATABASE_URL=postgres://usuario:senha@host:porta/nome_do_banco
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=celebra_capital

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Email
EMAIL_HOST=smtp.exemplo.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu_email@exemplo.com
EMAIL_HOST_PASSWORD=sua_senha_do_email
DEFAULT_FROM_EMAIL=no-reply@celebracapital.com.br

# API
API_URL=https://api.seu-dominio.com

# Amazon S3 (opcional)
USE_S3=False
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key
AWS_STORAGE_BUCKET_NAME=seu-bucket
AWS_S3_REGION_NAME=us-east-1

# VAPID Keys para notificações push
VAPID_PUBLIC_KEY=sua_chave_publica
VAPID_PRIVATE_KEY=sua_chave_privada
VAPID_ADMIN_EMAIL=admin@exemplo.com

# Monitoramento e Logging
SENTRY_DSN=https://seu-projeto@sentry.io/1234567
SENTRY_ENVIRONMENT=production
PROMETHEUS_MULTIPROC_DIR=/tmp
LOG_LEVEL=INFO 